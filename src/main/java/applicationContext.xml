<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
    xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.example.inversionofcontrol"/>

    <!--We need to change here only TestBeanIoC to TestBeanIoC1-->
    <!--Then bean class changed-->
    <bean id="myBean" class="com.example.inversionofcontrol.ioc.TestBeanIoC"></bean>
    <!--Or we can use another bean for different bean class-->
    <bean id="myBean1" class="com.example.inversionofcontrol.ioc.TestBeanIoC1"></bean>

    <!--Define the dependency-->
    <bean id="myService" class="com.example.inversionofcontrol.dependencyinjection.DIService"></bean>

    <bean id="myBeanDI" class="com.example.inversionofcontrol.ioc.TestBeanIoC">
        <!--Setup constructor injection-->
        <!--This is Internally work as following-->
        <constructor-arg ref="myService"/>
    </bean>

</beans>
